<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.target.targetcasestudy.viewModel.DealItemViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDeal"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageUrl="@{viewModel.imageUrl}"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDealTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintStart_toEndOf="@+id/imgDeal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:textColor="@color/tunDora"
            android:fontFamily="@font/roboto_light"
            tools:text="Junior's Boyfriend "
            android:textSize="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{viewModel.title}"
            tools:ignore="SpUsage" />
         <View
             android:id="@+id/viewDivider"
             android:layout_width="@dimen/dimen_0dp"
             android:layout_height="@dimen/dimen_1dp"
             android:background="@color/mercury_rgb_233"
             app:layout_constraintTop_toBottomOf="@+id/txtDealTitle"
             app:layout_constraintStart_toEndOf="@+id/imgDeal"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginStart="@dimen/dimen_16dp"
             />
          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/txtDealPrice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/imgDeal"
              android:layout_marginStart="@dimen/dimen_16dp"
              android:textColor="@color/tunDora"
              android:fontFamily="@font/roboto_light"
              android:textSize="@dimen/dimen_16dp"
              android:gravity="bottom"
              app:layout_constraintTop_toTopOf="@+id/txtAisle"
              app:layout_constraintBottom_toBottomOf="@id/txtAisle"
              tools:text="$9.00"
              android:text="@{viewModel.price}"
              tools:ignore="SpUsage" />
          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/txtAisle"
              android:layout_width="@dimen/dimen_36dp"
              android:layout_height="@dimen/dimen_36dp"
              app:layout_constraintTop_toBottomOf="@id/viewDivider"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="@dimen/dimen_16dp"
              android:padding="@dimen/dimen_7dp"
              android:background="@drawable/aisle_bg"
              android:textSize="@dimen/dimen_10dp"
              android:textColor="@color/guardsManRed"
              android:layout_marginTop="@dimen/dimen_5dp"
              app:layout_constraintBottom_toBottomOf="parent"
              tools:text="D10"
              app:textAllCaps="true"
              android:text="@{viewModel.aisle}"
              android:fontFamily="@font/roboto_bold"
              android:gravity="center"
              tools:ignore="SpUsage" />
           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/txtOr"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="@+id/txtAisle"
               app:layout_constraintBottom_toBottomOf="@id/txtAisle"
               app:layout_constraintEnd_toStartOf="@+id/txtAisle"
               android:layout_marginEnd="@dimen/dimen_5dp"
               android:textColor="@color/mercury"
               android:fontFamily="@font/roboto_regular"
               android:text="@string/or"
               android:textSize="@dimen/dimen_14dp"
               tools:ignore="SpUsage" />
             <androidx.appcompat.widget.AppCompatTextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toTopOf="@+id/txtAisle"
                 app:layout_constraintBottom_toBottomOf="@id/txtAisle"
                 app:layout_constraintEnd_toStartOf="@+id/txtOr"
                 android:layout_marginEnd="@dimen/dimen_5dp"
                 android:textColor="@color/tunDora"
                 android:fontFamily="@font/roboto_regular"
                 android:text="@string/ship"
                 android:textSize="@dimen/dimen_14dp"
                 tools:ignore="SpUsage"
                 />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
